<div id="edit-password-modal" class="modal">
  <div class="modal-background"></div>
  <div class="modal-content">
    <div class="box">
      <p class="error-message"></p>
      <form id="edit-credential-form" method="POST">
        <div class="field is-grouped is-grouped-centered">
          <label class="label is-large">EDIT PASSWORD</label>
        </div>
        <div class="field">
          <label class="label is-large edit-form-name">Name</label>
          <div class="control">
            <input class="input is-primary is-large" type="text" name="name" required>
          </div>
        </div>
        <div class="field">
          <label class="label is-large edit-url">URL</label>
          <div class="control has-icons-left">
            <input class="input is-primary is-large" type="text" name="url" required>
            <span class="icon is-small is-left">
              <i class="fa-solid fa-link"></i>
            </span>
          </div>
        </div>
        <div class="field">
          <label class="label is-large edit-form-username">Username</label>
          <div class="control has-icons-left">
            <input class="input is-primary is-large edit-username" type="text" name="username" required>
            <span class="icon is-small is-left">
              <i class="fa-solid fa-user"></i>
            </span>
          </div>
        </div>
        <div class="field">
          <label class="label is-large edit-form-password">Password</label>
          <div class="control has-icons-left">
            <input class="input is-primary is-large edit-password" type="password" name="password" required>
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
          </div>
        </div>
        <div class="field is-expanded">
          <label class="label is-large">Category</label>
          <p class="control is-expanded">
            <span class="select is-primary is-fullwidth is-large">
              <select class="select is-primary edit-category" name="categoryId"></select>
            </span>
          </p>
        </div>
        <div class="field is-grouped is-grouped-right">
          <p class="control">
            <button class="button is-primary is-large edit-credential" type="submit">Edit</button>
          </p>
        </div>
      </form>
    </div>
  </div>
</div>
